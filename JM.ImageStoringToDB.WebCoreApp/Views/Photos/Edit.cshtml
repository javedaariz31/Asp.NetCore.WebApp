@model JM.ImageStoringToDB.EFCore.Data.Models.Photo
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PhotoName" class="control-label"></label>
                <input asp-for="PhotoName" class="form-control" />
                <span asp-validation-for="PhotoName" class="text-danger"></span>
            </div>
            @if (Model.PhotoBinary == null)

            {
                <div class="form-group">
                    <label asp-for="PhotoBinary" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="PhotoBinary" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                </div>

            }
            else
            {
                <div class="form-group">
                    <label asp-for="PhotoBinary" class="control-label"></label>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.PhotoBinary)" style="height:150px;width:150px;" alt="" />
                </div>
            }
            <span asp-validation-for="PhotoBinary" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="Ocassion" class="control-label"></label>
                <input asp-for="Ocassion" class="form-control" />

                <span asp-validation-for="Ocassion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

