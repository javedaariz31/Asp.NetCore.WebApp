@model IEnumerable<JM.ImageStoringToDB.EFCore.Data.Models.Photo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhotoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoBinary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoName)
            </td>
            <td>
                @if (item.PhotoBinary == null)
                {
                    @Html.Raw("No Image Selected")
                }
                else
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.PhotoBinary)" style="height:50px;width:50px;" alt="" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ocassion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
